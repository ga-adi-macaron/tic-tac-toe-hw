<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:grid="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="ly.generalassemb.drewmahrt.tictactoe.GameActivity">

        <TextView
            android:id="@+id/replay_winner_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40sp"
            android:text="Player One&apos;s Turn"
            android:layout_centerHorizontal="true"
            android:paddingBottom="50sp"
            android:gravity="center"/>

        <GridLayout
            android:id="@+id/board"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:rowCount="3"
            android:layout_below="@+id/replay_winner_text">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:textSize="40sp"
                android:id="@+id/replayImageView"
                android:layout_column="0"
                android:layout_row="0"
                android:layout_columnWeight="1"
                android:scaleType="fitXY"
                android:src="@drawable/border"
                android:tag="0"/>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/replayImageView2"
                android:layout_column="1"
                android:layout_row="0"
                android:textSize="40sp"
                android:layout_columnWeight="1"
                android:scaleType="fitXY"
                android:src="@drawable/border"
                android:tag="1"/>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/replayImageView3"
                android:layout_column="2"
                android:layout_row="0"
                android:textSize="40sp"
                android:layout_columnWeight="1"
                android:scaleType="fitXY"
                android:src="@drawable/border"
                android:tag="2"/>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/replayImageView4"
                android:textSize="40sp"
                android:layout_column="0"
                android:layout_row="1"
                android:layout_columnWeight="1"
                android:scaleType="fitXY"
                android:src="@drawable/border"
                android:tag="3"/>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/replayImageView5"
                android:textSize="40sp"
                android:layout_column="1"
                android:layout_row="1"
                android:layout_columnWeight="1"
                android:scaleType="fitXY"
                android:src="@drawable/border"
                android:tag="4"/>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/replayImageView6"
                android:textSize="40sp"
                android:layout_column="2"
                android:layout_row="1"
                android:layout_columnWeight="1"
                android:scaleType="fitXY"
                android:src="@drawable/border"
                android:tag="5"/>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/replayImageView7"
                android:textSize="40sp"
                android:layout_column="0"
                android:layout_row="2"
                android:layout_columnWeight="1"
                android:scaleType="fitXY"
                android:src="@drawable/border"
                android:tag="6"/>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/replayImageView8"
                android:textSize="40sp"
                android:layout_column="1"
                android:layout_row="2"
                android:layout_columnWeight="1"
                android:scaleType="fitXY"
                android:src="@drawable/border"
                android:tag="7"/>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/replayImageView9"
                android:textSize="40sp"
                android:layout_column="2"
                android:layout_row="2"
                android:layout_columnWeight="1"
                android:scaleType="fitXY"
                android:src="@drawable/border"
                android:tag="8"/>
        </GridLayout>
        <Button
            android:id="@+id/replaybackButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/board"
            android:text="Go back to \n main Screen"
            android:layout_marginTop="20sp"/>
    </RelativeLayout>

